<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:background="@color/medium_spring_green"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MathActivity">

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:text="Math Question:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="INSERT QUESTION"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"/>

    <TextView
            android:id="@+id/ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="0"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@+id/question"
            app:layout_constraintStart_toEndOf="@id/question"/>

    <TextView
            android:id="@+id/scoreTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:textSize="16sp"
            android:textColor="@color/dark_grey"
            android:text="Score: 0"
            app:layout_constraintStart_toStartOf="@id/fpv_paint"
            app:layout_constraintBottom_toTopOf="@id/fpv_paint"/>

    <!--Temporary, removed from final product (using fingerpaint for input)
    <EditText
            android:id="@+id/TEST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:inputType="number"
            android:textSize="14sp"
            android:hint="(Temporary) Enter Number"
            app:layout_constraintEnd_toEndOf="@id/fpv_paint"
            app:layout_constraintBottom_toTopOf="@id/fpv_paint"/> -->

    <Button
            android:id="@+id/submit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="Submit Answer"
            android:textSize="16sp"
            android:backgroundTint="@color/cornflower_blue"
            android:textColor="@color/white_smoke"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/question"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/input"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Input #"
            android:textSize="16sp"
            android:backgroundTint="@color/cornflower_blue"
            android:textColor="@color/white_smoke"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="@+id/submit"
            app:layout_constraintEnd_toStartOf="@id/submit"/>

    <Button
            android:id="@+id/clear"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Clear #"
            android:textSize="16sp"
            android:backgroundTint="@color/cornflower_blue"
            android:textColor="@color/white_smoke"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/submit"
            app:layout_constraintStart_toEndOf="@id/submit"/>

    <com.nex3z.fingerpaintview.FingerPaintView
            android:id="@+id/fpv_paint"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:background="@color/white"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="56dp"
            android:foreground="@drawable/shape_rect_border"
            app:layout_constraintTop_toBottomOf="@+id/submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>